    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- Basic SEO -->
    <meta
      name="title"
      content="Orbion Studio - Desenvolvimento de Software e Web Design"
    />
